{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "typeRoots": ["./node_modules/@types", "./node_modules/vuetify/types"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "types": ["vuetify"]
}
